{
  "ts-node": {
    // needed for .d.ts type declarations to work in ts-node
    "files": true,
  },
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictBindCallApply": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "global.d.ts"
  ],
  "exclude": ["node_modules"],
}
